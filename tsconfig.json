{
  "ts-node": {
    "files": true
  },
  "files": [
    "type.d.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"],
  "exclude": [
    "node_modules",
    "./dist",
    "./jest.config.ts",
    "./examples",
    "./tasks"
  ]
}